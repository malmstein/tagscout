<resources>

  <style name="TagScout"
    parent="Theme.AppCompat.Light.DarkActionBar">

    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="LabelTextView"
    parent="@android:style/Widget.TextView">
    <item name="android:textColor">@android:color/white</item>
    <item name="android:singleLine">true</item>
    <item name="android:ellipsize">end</item>
    <item name="android:gravity">center_vertical</item>
    <item name="android:textSize">@dimen/label_title_size</item>
  </style>

  <style name="CrossImageView">
    <item name="android:paddingLeft">@dimen/padding_icon_cross</item>
    <item name="android:clickable">true</item>
    <item name="android:gravity">center_vertical</item>
    <item name="android:src">@drawable/ic_tag_remove</item>
  </style>

  <style name="Label">
    <item name="android:padding">@dimen/padding_label_view</item>
    <item name="android:layout_margin">@dimen/margin_between_labels</item>
    <item name="android:background">@color/colorPrimary</item>
  </style>

</resources>
