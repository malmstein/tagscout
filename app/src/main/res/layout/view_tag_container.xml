<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="vertical"
  android:padding="@dimen/tag_container_padding">

  <EditText
    android:id="@+id/tag_search_view"
    android:layout_width="match_parent"
    android:layout_height="@dimen/tag_search_view_height"
    android:singleLine="true"
    android:drawableLeft="@drawable/ic_icon_search"
    android:drawablePadding="@dimen/tag_search_view_padding"
    android:hint="@string/tag_search_hint" />

  <com.malmstein.sample.tagscout.tags.view.TagFilterView
    android:id="@+id/tag_filter"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/tag_search_view_padding"/>

</LinearLayout>



